@using OrderApp.Models.DTO.Form
@model FormGetDataToCreateOrUpdateOrderResponseDTO

<div class="modal-header">
    <h5 class="modal-title">@Model.FormTitle</h5>
</div>

<div class="modal-body">
    <label for="order-provider">Number</label>
    <select data-placeholder="placeholder" name="order-provider">
        @foreach (var providerName in Model.ProviderNames)
        {
            <option>@providerName</option>
        }
    </select>

    <label for="order-number">Number</label>
    <input name="order-number" />

    <label for="order-date">Date</label>
    <input type="date" name="order-date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />

    <table cellpadding="0" cellspacing="0" class="grid" id="order-items-table">
        <tr>
            <th>Name</th>
            <th>Quantity </th>
            <th>Unit</th>
        </tr>
    </table>

    <button>Add item</button>

    <button>Save order</button>
</div>







